<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title + Test</title>
    <link href="@Url.Content("~/Content/style/site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/style/simplecssgrid-" + (ViewBag.GridSize != null ? ViewBag.GridSize : 960) + ".css")" rel="stylesheet" type="text/css" />
    @*
    <script src="@Url.Content("~/Scripts/jquery-1.4.1.min.js")" type="text/javascript></script>
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    *@
</head>

<body>
    <div id="header">
    @if (IsSectionDefined("Header"))
    {
        @RenderSection("Header")
    }
    else
    {
        <div class="grid">
            <div id="intro" class="grid-3-5">
                <h1><a href="@Url.Content("~/")">Simple CSS grid</a></h1>
                <h2>Webdesing without the math</h2>
            </div>
            <div class="grid-2-5">
                <ul class="menu">
                    <li>@Html.ActionLink("Home", "index", "home")</li>
                    <li> @Html.ActionLink("Documentation", "index", "docs")</li>
                    <li><a href="@Url.Content("~/Content/downloads/simplecssgrid.zip")">Download</a></li>
                </ul>
            </div>
        </div>
    }        
    </div>

    <div id="content" class="grid">
        @RenderBody()
    </div>
    
</body>
</html>
